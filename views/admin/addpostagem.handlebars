{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}



<div class="card">
    <div class="card-body">
        <h3>Nova postagem:</h3>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" placeholder="Título da postagem" class="form-control">
            
            <label for="slug">Slug: </label>
            <input types = "text" name="slug" placeholder="Slug da postagem" class="form-control">

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" placeholder="Descrição da postagem">
            
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" placeholder="Conteudo da postagem" ></textarea>
    
            <br>

            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
                
            </select>
            
            <br>
            <br>
            <button class="btn btn-success" type="submit" >Criar postagem</button>
        </form>
    </div>
</div>
